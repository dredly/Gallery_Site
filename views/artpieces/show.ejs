<%- layout('layouts/base') %>

<h1><%= artpiece.title %></h1>
<img src="<%= artpiece.image.url %>" alt="<%= artpiece.image.filename %>">
<p><%= artpiece.description %></p>
<h2>Tags</h2>
<ul>
    <% for (let tag of artpiece.tags) { %>
    <li><%= tag %> </li>
    <% } %>
</ul>
<a href="/gallery/<%= artpiece._id %>/edit">Edit</a>
<form action="/gallery/<%= artpiece._id %>?_method=DELETE" method="POST">
    <button type="submit">Delete</button>
</form>
<a href="/gallery">Back to gallery</a>