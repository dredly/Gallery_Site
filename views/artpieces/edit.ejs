<%- layout('layouts/base') %>

<main class="container has-text-light">
    <h1 class="has-text-light title is-2">Edit this artwork</h1>
    <form class="mb-4" action="/gallery/<%= artpiece._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="field">
            <label class="label has-text-light" for="title">Title</label>
            <div class="control">
                <input class="input" type="text" id="title" name="title" value="<%= artpiece.title %>">
            </div>
        </div>
        <div class="field">
            <label class="label has-text-light" for="description">Description</label>
            <div class="control">
                <textarea class="textarea" name="description" id="description" cols="30" rows="10"><%= artpiece.description %></textarea>
            </div>
        </div>
        <div class="field">
            <label class="label has-text-light" for="tags">Tags - please enter separated by commas</label>
            <div class="control">
                <input class="input" type="text" id="tags" placeholder="mixed media, acrylic, canvas" name="tags" value="<%= tagsString %>">
            </div>
        </div>
        <button class="button is-link" type="submit">Save changes</button>
    </form>
    <a href="/gallery/<%= artpiece._id %>"><button class="button is-link is-small">Back to artwork</button></a>
    <a href="/gallery"><button class="button is-link is-small">Back to gallery</button></a>
</main>