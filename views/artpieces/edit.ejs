<%- layout('layouts/base') %>

<h1>Add new artwork</h1>
<form action="/gallery/<%= artpiece._id %>?_method=PUT" method="POST">
    <label for="title">Title</label>
    <input type="text" id="title" name="title" value="<%= artpiece.title %>">
    <label for="filename">Filename (PLACEHOLDER)</label>
    <input type="text" id="filename" name="filename" value="<%= artpiece.filename %>">
    <label for="description">Description</label>
    <input type="text" id="description" name="description" value="<%= artpiece.description %>">
    <label for="tags">Tags - please enter separated by commas</label>
    <input type="text" id="tags" placeholder="mixed media, acrylic, canvas" name="tags" value="<%= tagsString %>">
    <button type="submit">Add to gallery</button>
</form>
<a href="/gallery/<%= artpiece._id %>">Back to artwork</a>
<a href="/gallery">Back to gallery</a>